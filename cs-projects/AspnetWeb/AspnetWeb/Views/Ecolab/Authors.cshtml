
@model IEnumerable<ConceptArchitect.BookManagement.Author> 

@section PageTitle{
    - Recommended Authors
}

    

    <table>
        <thead>
            <tr>
                <th>Photograph</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var author in Model)
            {
                <tr>
                    <td><img src="@author.Photo" height='100' /></td>
                    <td>@author.Name</td>
                    <td>
                        <a href="#">Details</a>
                        <a href="#">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

  