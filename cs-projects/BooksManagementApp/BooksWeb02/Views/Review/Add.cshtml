@using ConceptArchitect.BookManagement
@model Review

<h2>Add Review</h2>


<form asp-action="AddReview" method="POST">

    <label asp-for="@Model.BookId" class='form-label'>Id</label>
    <input type='text' name="bookId" value="@Model.BookId" class='form-control' readonly style="background-color:lightgray" />

    <label asp-for="@Model.ReviewerEmail" class='form-label'>Reviewer Email</label>
    <input type='text' name="reviewerEmail" value="@Model.ReviewerEmail" class='form-control' readonly style="background-color:lightgray"/>

    <label asp-for="@Model.Rating" class='form-label'>Rating</label>
    <input type='text' name="rating" value="@Model.Rating" class='form-control' />


    <label asp-for="@Model.Title" class='form-label'>Title</label>
    <input type='text' name="title" value="@Model.Title" class='form-control' />

    <label asp-for="@Model.Details" class='form-label'>Details</label>
    <input type='text' name="details" value="@Model.Details" class='form-control' />




    <div>

        <input type="submit" value="Add Review" class='btn btn-primary form-control' />
    </div>
</form>
