
@model ConceptArchitect.BookManagement.Book

<h1>Confirm Delete @Model.Title</h1>

<partial name="Details" for="@Model" />

<form method="POST">
    <input type="hidden" name="id" value="@Model.Id"  />
    <input type="submit" value="Yes! Delete the Book" class='btn btn-danger' />
    <p><a asp-action="index" >No. I have changed my mind</a></p>
</form>

